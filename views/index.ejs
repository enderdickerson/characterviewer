  <script src="src/app/core/_events.js"></script>
  <script src="src/app/core/adminctrl.js"></script>
  <script src="src/app/core/appctrl.js"></script>
  <script src="src/app/core/authctrl.js"></script>
  <script src="src/app/core/authinterceptor.js"></script>
  <script src="src/app/core/authservice.js"></script>
  <script src="src/app/core/authtoken.js"></script>
  <script src="src/app/core/ndnav.directive..js"></script>
